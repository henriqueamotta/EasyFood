<nav class="navbar navbar-expand-lg navbar-light navbar-custom">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <%= image_tag "easyfood_logo.png", alt: "EasyFood Logo", style: "height: 35px; width: auto;" %>
      <span class="ms-2 font-brand">EasyFood</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto d-flex align-items-center">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="<%= language_selector_flag %>"></span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li>
              <%= link_to url_for(locale: 'pt-BR'), class: "dropdown-item" do %>
                <span class="fi fi-br me-2"></span> Português
              <% end %>
            </li>
            <li>
              <%= link_to url_for(locale: 'en'), class: "dropdown-item" do %>
                <span class="fi fi-us me-2"></span> English
              <% end %>
            </li>
            <li>
              <%= link_to url_for(locale: 'es'), class: "dropdown-item" do %>
                <span class="fi fi-es me-2"></span> Español
              <% end %>
            </li>
          </ul>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle"></i> <!-- Ícone de usuário do Bootstrap Icons -->
              <%= t("layouts.navbar.welcome") %>, <%= current_user.name || current_user.email %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="<%= recipes_path %>"><%= t("layouts.navbar.my_recipes") %></a></li>
              <li><a class="dropdown-item" href="<%= edit_user_registration_path %>"><%= t("layouts.navbar.edit_profile") %></a></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= button_to t("layouts.navbar.sign_out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_session_path %>"><%= t("layouts.navbar.sign_in") %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_registration_path %>"><%= t("layouts.navbar.sign_up") %></a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<!-- linha 3: d-flex align-items-center: alinha os itens do navbar verticalmente ao centro -->
<!-- linha 4: image_tag "easyfood_logo.png": exibe o logo do EasyFood -->
<!-- linha 4: alt: "EasyFood Logo": define um texto alternativo para a imagem, que é crucial para acessibilidade -->
<!-- linha 4: style: "height: 35px; width: auto;": define a altura da imagem do logo e mantém a proporção -->
<!-- linha 4: height: 35px: define a altura do logo, podemos ajustar conforme necessário (30px ou 40px, p.ex.) -->
<!-- linha 4: width: auto: define a largura do logo como automática, mantendo a proporção da imagem -->
<!-- linha 5: span class="m-2">EasyFood</span>: adiciona uma margem horizontal de 2 unidades ao texto "EasyFood" -->
