<div class="d-flex justify-content-between align-items-center mb-4"> <!-- Cabeçalho da página -->
  <h1 class="mb-0"><%= t('.title') %></h1>
  <%= link_to t('.new_recipe_button'), new_recipe_path, class: "btn btn-primary" %>
</div>

<% if @recipes.any? %> <!-- Verifica se há receitas para exibir -->
  <div class="row"> <!-- Início da linha de receitas -->
    <% @recipes.each do |recipe| %>
      <%# Define as colunas responsivas: 1 no celular, 2 no tablet, 3 no desktop %>
      <div class="col-md-6 col-lg-4 mb-4"> <!-- Em telas médias cada card ocupará 2 linhas e em telas grandes 3 linhas -->
        <%= link_to recipe, class: "text-decoration-none" do %> <!-- Link para a receita -->
          <div class="card h-100 shadow-sm card-hover"> <!-- Garante que todos os cards tenham o mesmo tamanho -->
            <% if recipe.photo.attached? %>
              <%= image_tag recipe.photo, class: "card-img-top", alt: recipe.title %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title text-dark"><%= recipe.title %></h5>
              <p class="card-text text-muted">
                <%# Mostra um trecho dos ingredientes como uma prévia %>
                <%= truncate(recipe.ingredients, length: 80) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center p-5 border rounded-3 bg-white shadow-sm">
    <p class="lead"><%= t('.empty_state_lead') %></p>
    <p><%= t('.empty_state_prompt') %></p>
    <%= link_to t('.empty_state_cta_button'), new_recipe_path, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
